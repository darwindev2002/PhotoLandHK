<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_report_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/colorHomeWhiteCardBackground"
    tools:showIn="@layout/fragment_home"
    app:contentPaddingBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="7dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/HomeCardHeader"
                android:background="@color/colorDiscussion"
                android:text="@string/title_discussion"
                android:textColor="@color/colorHomeDarkCardBackground" />

            <TextView
                android:id="@+id/nav_discussion_more"
                style="@style/HomeCardMore"
                android:background="#FFFFFF"
                android:textColor="@color/colorDiscussion" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_discussion_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </ScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>