<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomeCardHeader" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:font">@style/AppFont</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="HomeCardMore" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:font">@style/AppFont</item>
        <item name="android:text">@string/more</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

</resources>